{
  "name": "art_auth_validator_api",
  "version": "1.0.0",
  "description": "REST API for certificate of authenticity validator",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "npx rimraf dist && npx tsc",
    "preserve": "npm run build",
    "serve": "npx concurrently 'npx tsc -w' 'nodemon dist/index.js'",
