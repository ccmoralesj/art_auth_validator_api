    "start": "node ./dist/index.js",
    "build:start": "npm run build && npm run start",
    "test": "test"
  },
  "keywords": [
    "REST",
    "API",
    "Typescript",
    "Nodejs",
    "KOAjs"
  ],
  "author": "Cristian Morales",
  "license": "ISC",
  "dependencies": {
    "@types/koa": "2.13.6",
    "concurrently": "8.2.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "0.29.0",
    "fast-safe-stringify": "2.1.1",
    "jsonwebtoken": "9.0.2",
    "koa": "2.14.2",
    "koa-parser": "1.0.8",
    "koa-router": "12.0.0",
    "node-fetch": "3.3.2",
    "postgres": "3.4.3",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "winston": "3.10.0"
  },
  "devDependencies": {
    "@types/koa-router": "7.4.4",
    "@types/node": "20.4.1",
